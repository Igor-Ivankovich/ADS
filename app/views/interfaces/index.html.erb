<h1>New Post</h1>
<% if can? :create, Post %>
  <%= link_to 'New Item', new_post_path %>
<% end %>

<br>

<h1>Draft</h1>
<% @draft.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.user.name %></td>
    <td><%= link_to 'Show', post %></td>

    <% if can? :update, post %>
      <%= link_to 'Edit', edit_post_path(post) %>
    <% end %>
    <td>
      <% if can? :destroy, post %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
    <br>
    <td>
    </td>
    <td>
    </td>
  </tr>
<% end %>

