<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% unless @current_user&.admin? %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.rich_text_area :content %>
    </div>

  <% end %>

  <% if @current_user&.admin? %>
    <div class="field">
      <%= form.label :post_type %>
      <%= form.check_box :post_type, { checked: false }, 'A', 'R' %>
    </div>
  <% else %>
    <div class="field">
      <%= form.label :post_type %>
      <%= form.check_box :post_type, { checked: false }, 'M', 'C' %>
    </div>
  <% end %>

  <%= simple_form_for @post, url: posts_path do |f| %>
        <%= f.input :tag_ids, as: :select, collection: Tag.order(:name), label_method: :name, input_html: { multiple: true } %>
    <%= f.submit "Next", class: 'btn btn-lg btn-primary float-right' %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
